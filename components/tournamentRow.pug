
include /components/atoms/ratingLimit.pug
include /components/playersAndComments.pug

mixin tournamentRow(time, gender, type, rating, group, players, comments, isReg = false)
  a(class="flex items-center py-3 gap-2 border-t first:border-none" href="pages/tournaments/singleTournament.html")
    span.w-9.text-sm.shrink-0= time
    .inline-flex.gap-1.grow.flex-wrap
      div(class="w-6 h-6 flex justify-center items-center text-xs text-lab-black font-bold rounded border bg-lab-color-10")= group
      +ratingLimit(rating, type, gender)
      +ratingLimit(rating, type, gender)
      +ratingLimit(rating, type, gender)
    +playersAndComments(players)
  if isReg
    div.flex.items-center.gap-1.mb-2.ml-11
      img(src="img/checkmark.svg", class="w-4 h-4")
      span.text-xs.font-semibold.text-lab-color Вы играете в этой группе
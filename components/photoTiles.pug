mixin photoTiles(mt, edit, addPhoto)
  -
    const images = ['dynamic-img/club-1.jpg', 'dynamic-img/club-2.jpg', 'dynamic-img/club-3.jpg', 'dynamic-img/club-4.jpg', 'dynamic-img/photo-2.jpg']
    const repeatedImages = images.concat(images, images, images)
  .mb-4.grid.grid-cols-3(class=`430grid-cols-4 sm:grid-cols-5 md:grid-cols-6 lg:grid-cols-7 gap-0.5 ${mt ? 'mt-4' : ''}`)
    each image in repeatedImages
      if edit
        div.relative
          a(href='pages/aroundgame/photo.html')
            img.aspect-square.object-cover(src=image)
          div.absolute.inset-x-0.bottom-0.mb-2.flex.justify-center.space-x-4
            div.bg-white.bg-opacity-75.rounded-full.p-2.shadow
              img.w-4.h-4(src='img/edit.svg')
            div.bg-white.bg-opacity-75.rounded-full.p-2.shadow
              img.w-4.h-4(src='img/delete.svg')
      else if addPhoto
        div.relative.add-photo-container(onclick="togglePhotoSelection(this)")
          img.aspect-square.object-cover(src=image)
          div.absolute.inset-0.bg-black.bg-opacity-25.hidden(class="checkmark")
            img.w-8.h-8(src='img/checkmark-white.svg').absolute.right-1.bottom-1
      else
        a(href='pages/aroundgame/photo.html')
          img.aspect-square.object-cover(src=image)
    if edit
      div.aspect-square.flex.justify-center.items-center.bg-rttf-color-10(onclick="toggleActionMenu()")
        img(src="img/simple-plus.svg", alt="")

script.
  function togglePhotoSelection(el) {
    const checkmark = el.querySelector('.checkmark');
    checkmark.classList.toggle('hidden');
  }

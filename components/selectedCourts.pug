include /components/modal.pug
include /components/dottedLine.pug

mixin selectedCourts(deleteButton, price=true) 
    .flex.justify-between.gap-3.py-2.max-w-sm.items-center
        div.inline
            img(src="img/time.svg", alt="Время").inline.align-middle.saturate-50.opacity-50
            span.inline.align-middle.leading-none.ml-2 11:00-12:30
        div.court
            img(src="img/court.svg", alt="Стол").inline.align-middle.saturate-50.opacity-50
            span.inline.align-middle.ml-2.text-rttf-color Стол 5
        if price
            div 
                img(src="img/price.svg", alt="Цена").inline.align-middle.saturate-50.opacity-50
                span.inline.align-middle.ml-2 1800&#8202;₽
        if deleteButton
            button(type="button").leading-none.text-rttf-black-50 ✕
    .flex.justify-between.gap-3.py-2.max-w-sm.items-center
        div.inline
            img(src="img/time.svg", alt="Время").inline.align-middle.saturate-50.opacity-50
            span.inline.align-middle.leading-none.ml-2 11:00-12:30
        div.court 
            img(src="img/court.svg", alt="Стол").inline.align-middle.saturate-50.opacity-50
            span.inline.align-middle.ml-2.text-rttf-color Стол 6
        if price
            div 
                img(src="img/price.svg", alt="Цена").inline.align-middle.saturate-50.opacity-50
                span.inline.align-middle.ml-2 1800&#8202;₽
        if deleteButton
            button(type="button").leading-none.text-rttf-black-50 ✕

    +modal('', '', 'court-modal', true)  
        h2 Стол №5
        p.text-rttf-black-50.text-sm.pt-0.pb-2 Стандартный  
        img(src="dynamic-img/court5.jpg", alt="").mt-2.rounded-sm.pb-2
        
        +dottedLine('Размер зала', '17x10 м')
        +dottedLine('Высота потолков', '8 м')
        +dottedLine('Покрытие', 'Тарафлекс')
    
    script.
        document.addEventListener('DOMContentLoaded', function() {
            const courtDivs = document.querySelectorAll('.court');

            courtDivs.forEach(function(div) {
                div.addEventListener('click', function() {
                    const modal = document.getElementById('court-modal');
                    if (modal) {
                        modal.style.display = 'block';
                    }
                });
            });
        });
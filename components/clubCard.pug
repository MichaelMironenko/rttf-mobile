mixin clubCard(image, rating, reviewsCount, title, location, courtsCount, services)
  a(href="pages/halls/singleClub.html").w-48.rounded-lg.overflow-hidden.shadow-lg.shrink-0
    div.w-full.h-32.bg-center.bg-cover(style=`background-image: url('${image}')`)
    div.p-3.flex.flex-col.gap-2.justify-between.h-fit
      div.font-semibold.leading-tight= title
      div.flex.items-center.text-sm
        span.font-semibold= rating
        img.h-4.ml-1(src="img/star.svg")
        span.text-rttf-black-50.ml-2= reviewsCount + ' отзыва'
      if location.city
        div
          img.inline.opacity-50.saturate-50.mr-1(src="img/location-icon.svg")
          span.inline.text-rttf-black-50.text-sm.h-4= location.city
      else if location.metro
        div
          div(class=`bg-${location.metroColor}`).inline-block.size-2.rounded-full.mr-1.shrink-0.align-middle
          span(class=`inline text-rttf-black-50 leading-tight align-middle text-sm`)= location.metro
      div.flex.items-center.grow.justify-self-stretch
        div.flex.items-center
          img.inline.size-4.saturate-50.opacity-50(src="img/tabbar/tables.svg" class='mr-0.5' alt='Столов')
          span.text-sm.leading-none= courtsCount
        div.inline.ml-2
          each val in services
            img.inline.saturate-50.opacity-75(src=`img/${val}.svg` alt=val class="size-3.5 mr-0.5") 

mixin userStatusBadge(type)
  if type && type.trim() !== ''
    -
      let badgeColor = '';
      switch(type.toLowerCase()) {
        case 'админ':
          badgeColor = 'bg-rttf-red';
          break;
        case 'модератор':
          badgeColor = 'bg-rttf-color';
          break;
        case 'админ клуба':
          badgeColor = 'bg-rttf-green';
          break;
        case 'организатор':
          badgeColor = 'bg-rttf-blue';
          break;
        case 'тренер':
          badgeColor = 'bg-rttf-black';
          break;
        case 'фотограф':
          badgeColor = 'bg-purple-500';
          break;
        case 'стрингер':
          badgeColor = 'bg-rttf-yellow';
          break;
      }
    div(class=`${badgeColor} z-10 w-fit rounded px-1.5 py-0.5 text-xs font-medium text-white`)
      | #{ type }

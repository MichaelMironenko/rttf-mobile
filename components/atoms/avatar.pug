mixin avatar(color, initials, size, url, status, unreadBadge, extraClass, birthday)
  -
    let roundedPadding = Math.round(size / 24);
    let avatarBorder = status === 'тренер' ? 'from-red-500 to-blue-900' : 'from-green-600 to-sky-500';  
  #avatarContainer.cursor-pointer(
    class=`p-[${roundedPadding}px] w-[${size}px] h-[${size}px] ${avatarBorder}  ${extraClass} relative flex shrink-0 items-center justify-center rounded-full bg-gradient-to-r`
  )
    if url
      //- Если URL изображения предоставлен, используем img тег для его отображения
      img.h-full.w-full.rounded-full.object-cover(src=url, alt='Аватар')
    else
      //- В противном случае отображаем цветной круг с инициалами
      div(
        class=`${color} flex h-full w-full items-center justify-center rounded-full border border-white border-opacity-75`
      )
        //- Используем calc для динамического вычисления размера шрифта
        span(class=`w-full text-center text-[calc(${size}px/2.66)] font-bold leading-none text-white`)= initials
    if unreadBadge
      span.absolute.-right-2.-top-1.min-w-5.rounded-full.bg-rttf-red.text-center.text-xs.font-semibold.text-white.drop-shadow-sharp(
        class='px-1.5 py-0.5'
      )= unreadBadge
    if birthday
      img.absolute.-right-2.-top-6.-z-10.h-12.w-8(src='img/birthday-hat.png', class='rotate-[38deg]')

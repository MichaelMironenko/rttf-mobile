mixin stringerCard(stringerInfo)
  a.mb-2.flex.w-full.items-center.gap-3.rounded-lg.border.bg-white.p-4(
    href='pages/market/stringer.html'
  )
    +avatar(stringerInfo.color, stringerInfo.initials, 80)
    .w-full
      h2.mb-2.text-base.font-semibold #{ stringerInfo.name }
      .mb-2.flex.items-center.text-sm
        img.h-4(src='img/star.svg')
        span.ml-1.font-semibold= stringerInfo.stars
        span.ml-3.text-rttf-black-50= stringerInfo.reviews + ' отзывов'
      .mb-2.flex.flex-wrap.items-center.gap-3
        .flex.items-center
          img.mr-1.opacity-50.saturate-50(src='img/location-icon.svg')
          span.h-4.text-sm.leading-none.text-rttf-black-50= stringerInfo.address
        .flex.items-center
          img.mr-1.size-4(src='img/location-arrow.svg')
          span.text-sm.leading-none.text-rttf-black-50 #{ stringerInfo.distance } км
      .mb-2
        .w-fit.rounded.bg-rttf-light-yellow.px-2.py-1.text-xs.font-semibold.text-rttf-black= 'от ' + stringerInfo.price + '₽/ч'

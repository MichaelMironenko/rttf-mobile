doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Летний интенсив
        link(href="../../styles.css" rel="stylesheet")
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Exo+2:wght@100;200;300;400;500;600;700;800&:display=swap")

        base(href="../../")
    body.bg-page-background.mt-12.pb-32.p-2
        +topBar

       

        div.p-4.bg-white.rounded-lg.mb-3
            .flex.justify-between.gap-3.items-center
                h1.text-lg.text-center.ml-6.leading-6.text-lab-black.flex-grow.font-semibold Летний интенсив
                +bookmark(false)
            img(src="dynamic-img/camp1.png", alt="").w-full.pt-4
            div.grid.grid-cols-1.gap-6.mt-6(class="text-[15px] sm:grid-cols-2")
                .flex.gap-2.justify-between.items-center
                    div.flex.flex-col.gap-3
                        div.flex.gap-4.items-center
                            img.w-4.aspect-square.opacity-60.saturate-50(src='img/calendar.svg' alt='Дата')
                            span 18–22 июля 2024 г.

                        .flex.gap-4.items-center
                            img.w-4.aspect-square.opacity-60.saturate-50(src='img/price.svg' alt='Цена')
                            span от 4500₽ / сутки

                        div.flex.gap-4.items-center
                            img.w-4.aspect-square.opacity-60.saturate-50(src='img/player.svg' alt='Игроки')
                            span 3/16
                    

                div.grid.grid-cols-1(class="xs:grid-cols-2").gap-4
                    div.flex.flex-col.gap-2.text-sm
                        div.flex.gap-4.items-center
                            img.w-4.aspect-square.opacity-60.saturate-50(src='img/administrator.svg' alt='Клуб')
                            a(href="") NATEN, Ларченко Елена
                        div.flex.gap-4.items-center
                            img.w-4.aspect-square.opacity-60.saturate-50(src='img/location-icon.svg' alt='Адрес')
                            span Пансионат 'Клязьма', г. Мытищи
                        div.flex.gap-4.items-center
                            img.w-4.aspect-square.opacity-60.saturate-50(src='img/phone.svg' alt='Контакты')
                            a(href="tel:79262004022") +7-926-200-40-22
                    div.h-full.max-h-40
                        img(src="dynamic-img/map.png" class="object-cover h-full w-full")



            +button('Регистрация', 'default', 'white', 'bg-avatar-gradient grow my-4', '', 'registerButton') 
            +button('Оплатить', 'default', 'white', 'bg-avatar-gradient grow', '', 'registerButton') 
                    

                
                div.flex.flex-grow.justify-between.items-center.gap-2
                    .inline-flex.gap-2
                        img.w-5.aspect-square.shrink-0(src='img/checkmark.svg' alt='Галочка')
                        span Вы зарегистрированы
                    +button('Отменить', "text", 'lab-red', 'bg-lab-color')

                div.w-full.text-center.bg-avatar-gradient.bg-clip-text.text-transparent.mb-4
                    div Регистрация откроется 
                    div.font-bold 12 сентября в 13:00

        +block('Информация о сборах')
            +filterButtonsRow([
                    { label: 'Общая информация', active: true},
                    { label: 'Программа', active: false},
                    { label: 'Тренеры', active: false},
                ], '')
            p.mt-4 Информация о сборах

        +block('Зарегистрированные участники')
            div(class="-ml-4 -mr-4")
                   

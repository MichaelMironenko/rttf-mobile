                            td.py-2.text-center.text-lab-black.pr-2 #{player.regNumber}
                            td.py-2.text-center.max-w-16.w-10
                                +avatar('bg-lab-color', player.firstName[0] + player.lastName[0], 28, player.avatar)
                            td.py-2 
                                div
                                    span.font-semibold.text-lab-color #{player.firstName + ' ' + player.lastName}
                                    div.text-xs(class=(player.paymentStatus == 'Оплачено' ? 'text-lab-green' : 'text-red-500')) #{player.paymentStatus}

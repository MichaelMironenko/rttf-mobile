    div.grid.grid-cols-1.bg-white(class="576:grid-cols-2 576:p-4 md:grid-cols-3 lg:grid-cols-4  gap-4")
      each video, index in bottomVideos
        a.flex.flex-col.gap-2.flex-shrink-0.w-full(href="pages/aroundgame/video.html")
          .video-preview(data-url=video.url).w-full
            if video.url.includes('youtube') || video.url.includes('youtu.be')
              - const youtubeId = video.url.split('v=')[1] || video.url.split('youtu.be/')[1]
              img(src=`http://img.youtube.com/vi/${youtubeId}/mqdefault.jpg` alt=video.title).w-full.h-full
          div(class="px-4 576:px-0")  
            .text-sm.font-bold.text-rttf-black #{video.title}
            .flex.items-center.gap-3.text-sm.mt-2
              .flex.items-center.gap-1
                img(src="img/views.svg" alt='Просмотров').size-5.opacity-50.saturate-50
                span.text-rttf-black-50 #{video.views}
              span.text-rttf-black-50= video.date










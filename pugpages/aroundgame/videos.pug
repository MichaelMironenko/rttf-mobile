    link(href='../../styles.css' rel='stylesheet')
    link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Exo+2:wght@100;200;300;400;500;600;700;800&:display=swap")
  base(href='../../')
  body.bg-page-background.pb-16.pt-12
    +topBar
    .px-4.pt-4
      .flex.items-center.justify-between.gap-3
        h1 Видео
        img.size-6(src='img/plus-button.svg' alt='')
      +searchAndFilterButton('Название','', 'py-4')
      +videoSlider(true, true, 'Трансляции', false, false)
      +videoSlider(true, false, 'Новинки', false, false)
      +videoSlider(true, false, 'Обзоры товаров', false, false)
      +videoSlider(true, false, 'Официальные соревнования', false, false)
      +videoSlider(true, false, 'Уроки', false, false)


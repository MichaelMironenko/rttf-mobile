      div(id=`photomenu-${photoID}`, class="absolute bottom-0")
        +actionMenu([
          { text: 'Редактировать', color: ' text-lab-color', link:'pages/aroundgame/editPhoto.html' },
          { text: 'Убрать своё имя с фото', color: ' text-lab-color' },

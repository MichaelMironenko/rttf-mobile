    script.
      const currentBtn = document.getElementById('current')
      const pastBtn = document.getElementById('past')
      const currentCards = document.getElementById('currentCards')
      const pastCards = document.getElementById('pastCards')

      currentBtn.addEventListener('click', () => {
        currentCards.style.display = 'flex'
        pastCards.style.display = 'none'
        currentBtn.classList.add('bg-lab-color', 'text-white', 'font-semibold')
        currentBtn.classList.remove('bg-lab-color-10', 'text-lab-black')
        pastBtn.classList.remove('bg-lab-color', 'text-white', 'font-semibold')
        pastBtn.classList.add('bg-lab-color-10', 'text-lab-black')
      })

      pastBtn.addEventListener('click', () => {
        currentCards.style.display = 'none'
        pastCards.style.display = 'flex'
        pastBtn.classList.add('bg-lab-color', 'text-white', 'font-semibold')
        pastBtn.classList.remove('bg-lab-color-10', 'text-lab-black')
        currentBtn.classList.remove('bg-lab-color', 'text-white', 'font-semibold')
        currentBtn.classList.add('bg-lab-color-10', 'text-lab-black')
      })

      document.getElementById('current').addEventListener('click', function () {
        document.getElementById('currentCards').style.display = 'flex'
        document.getElementById('pastCards').style.display = 'none'
      })
      document.getElementById('past').addEventListener('click', function () {
        document.getElementById('currentCards').style.display = 'none'
        document.getElementById('pastCards').style.display = 'flex'
      })

